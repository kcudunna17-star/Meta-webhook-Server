const express = require("express");
const bodyParser = require("body-parser");
require("dotenv").config();

const app = express();
const PORT = process.env.PORT || 10000;

// Middleware
app.use(bodyParser.json());

// ðŸ“ Ping test route â€” helps confirm Render logs work
app.get("/ping", (req, res) => {
  console.log("ðŸ“ Ping received at /ping endpoint!");
  res.status(200).send("PONG");
});

// âœ… Webhook verification (Meta calls this when you first set webhook URL)
app.get("/webhook", (req, res) => {
  console.log("ðŸŸ¡ Incoming GET verification request:", req.query);
  const VERIFY_TOKEN = process.env.VERIFY_TOKEN;

  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("âœ… Webhook verified successfully!");
      res.status(200).send(challenge);
    } else {
      console.log("âŒ Verification failed. Token mismatch or wrong mode.");
      res.sendStatus(403);
    }
  } else {
    console.log("âš ï¸ Missing mode or token in query parameters.");
    res.sendStatus(400);
  }
});

// âœ… Handle incoming messages/events
app.post("/webhook", (req, res) => {
  const body = req.body;
  console.log("ðŸ“© Incoming webhook event:", JSON.stringify(body, null, 2));
  res.status(200).send("EVENT_RECEIVED");
});

// Start server
app.listen(PORT, () => {
  console.log(`ðŸš€ Server running on port ${PORT}`);
});
