// ✅ Webhook verification (Meta calls this when you first set webhook URL)
app.get("/webhook", (req, res) => {
  console.log("📥 Incoming GET /webhook request:", req.query); // <-- NEW log line

  const VERIFY_TOKEN = process.env.VERIFY_TOKEN;

  // Parse params from the query string
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  // Check if a token and mode were sent
  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("✅ Webhook verified successfully!");
      res.status(200).send(challenge);
    } else {
      console.warn("❌ Webhook verification failed. Invalid token:", token);
      res.sendStatus(403);
    }
  } else {
    console.warn("⚠️ Missing mode or token in query params:", req.query);
    res.sendStatus(400);
  }
});
