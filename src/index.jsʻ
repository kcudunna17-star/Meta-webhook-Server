const express = require("express");
const bodyParser = require("body-parser");
require("dotenv").config();

const app = express();
const PORT = process.env.PORT || 10000; // Render auto-assigns a port

// ✅ Basic health check
app.get("/", (req, res) => {
  res.send("✅ Meta Webhook Server is live and running!");
});

// ✅ Ping route for testing Render logs
app.get("/ping", (req, res) => {
  console.log("🏓 Ping received at /ping endpoint!");
  res.send("PONG");
});

// Parse JSON body
app.use(bodyParser.json());

// ✅ Webhook verification (for Meta)
app.get("/webhook", (req, res) => {
  console.log("🟡 Incoming GET verification request:", req.query);

  const VERIFY_TOKEN = process.env.VERIFY_TOKEN;
  const mode = req.query["hub.mode"];
  const token = req.query["hub.verify_token"];
  const challenge = req.query["hub.challenge"];

  if (mode && token) {
    if (mode === "subscribe" && token === VERIFY_TOKEN) {
      console.log("✅ Webhook verified successfully!");
      res.status(200).send(challenge);
    } else {
      console.log("❌ Verification failed: token mismatch.");
      res.sendStatus(403);
    }
  } else {
    console.log("⚠️ Missing mode or token in query.");
    res.sendStatus(400);
  }
});

// ✅ Handle webhook events
app.post("/webhook", (req, res) => {
  console.log("📩 Incoming webhook event:", JSON.stringify(req.body, null, 2));
  res.status(200).send("EVENT_RECEIVED");
});

// ✅ Start server
app.listen(PORT, () => {
  console.log(`🚀 Server running on port ${PORT}`);
});
